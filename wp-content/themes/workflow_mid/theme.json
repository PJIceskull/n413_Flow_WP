{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#E5ECF1",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#3498D8",
					"name": "Blue",
					"slug": "blue"
				},
				{
					"color": "#FA970A",
					"name": "Orange",
					"slug": "orange"
				}
			]
		},
		"layout": {
			"contentSize": "1512px",
			"wideSize": "1512px"
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Primary",
					"slug": "Primary",
					"fontFamily": "'Roboto', sans-serif",
					"fontFace": [
						{
							"fontFamily": "Roboto",
							"fontWeight": "200, 800",
							"src": ["file:./assets/fonts/Roboto-VariableFont_wdth,wght.ttf"]
						}
					]
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "Roboto"
		},
		"color": {
			"background": "var:preset|color|background"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				},
				"spacing": {
					"margin": {
						"bottom": "0"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "32px"
				},
				"spacing": {
					"margin": {
						"top": "77px"
					}
				}
			},
			"link": {
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"text": "#000000"
				}
			}
		},
		"blocks": {
			"core/buttons": {
				"spacing": {
					"margin": { "top": "0" }
				},
				"elements": {
					"button": {
						":hover": {
							"border": {
								"radius": "0px"
							}
						}
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var:preset|color|orange"
				},
				"typography": {
					"fontWeight": "200"
				},
				"elements": {
					"button": {
						":hover": {
							"border": {
								"radius": "0px"
							}
						}
					}
				}
			},
			"core/navigation": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				}
			},
			"core/navigation-link": {
				"css": "list-style: none;"
			},
			"core/search": {
				"spacing": {
					"margin": {
						"top": "0"
					}
				},
				"elements": {
					"button": {
						"color": {
							"background": "#000000"
						}
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "home",
			"title": "Blog Home",
			"postTypes": ["page"]
		},
		{
			"name": "front-page",
			"title": "Front Page",
			"postTypes": ["page", "post"]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		}
	]
}
